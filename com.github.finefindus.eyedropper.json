{
    "id": "com.github.finefindus.eyedropper",
    "runtime": "org.gnome.Platform",
    "runtime-version": "42",
    "sdk": "org.gnome.Sdk",
    "sdk-extensions": ["org.freedesktop.Sdk.Extension.rust-stable"],
    "command": "eyedropper",
    "finish-args": [
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri",
        "--env=RUST_LOG=eyedropper=debug",
        "--env=G_MESSAGES_DEBUG=none",
        "--env=RUST_BACKTRACE=1"
    ],
    "build-options": {
        "append-path": "/usr/lib/sdk/rust-stable/bin"
    },
    "modules": [
        {
            "name": "eyedropper",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/FineFindus/eyedropper/releases/download/v0.2.0/eyedropper-0.1.0.tar.xz",
                    "sha256": "e798b86c7131419753536256c3285ffbca02d90079da3bb8fdcb8b6ec02a3b84"
                }
            ]
        }
    ]
}
